<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a531tracker">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".onboarding.SplashLauncher"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".onboarding.NewUserInformation"
            android:screenOrientation="portrait" />

        <activity
            android:name=".homepage.HomePageActivity"
            android:screenOrientation="portrait" />

        <activity android:name=".week.WeekActivity"
            android:screenOrientation="portrait"/>

        <activity android:name=".settings.SettingsNew"
            android:theme="@style/PreferencesStyle"
            android:screenOrientation="portrait"/>

        <activity android:name=".lifts.SetLiftsActivity"
            android:screenOrientation="portrait"/>

    </application>

</manifest>