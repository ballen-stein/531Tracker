<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background_gradient">

    <include layout="@layout/navigation"
        android:id="@+id/top_navigation"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/workout_frame_16"
        app:layout_constraintTop_toBottomOf="@+id/top_navigation"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/tm_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:elevation="4dp"
                android:orientation="vertical"
                app:layout_constraintTop_toTopOf="parent" >

                <TextView
                    android:id="@+id/cycle_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/workout_frame_padding_half"
                    android:layout_gravity="center"
                    android:text="@string/cycle_title"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_18" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:background="@drawable/rectangle_outline"
                    android:layout_marginTop="@dimen/workout_frame_8"
                    android:padding="@dimen/workout_frame_padding"
                    android:elevation="8dp" >

                    <TextView
                        android:id="@+id/current_cycle_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:layout_gravity="center"
                        android:text="@string/cycle_placeholder"
                        android:textColor="@color/colorDarkRed"
                        android:textSize="@dimen/text_18"
                        android:layout_marginStart="@dimen/workout_frame_96"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <ImageView
                        android:id="@+id/cycle_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_forward_arrow_orange"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="parent"
                        app:layout_constraintStart_toEndOf="parent"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/update_cycle_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:layout_gravity="center"
                        android:text="@string/cycle_placeholder"
                        android:textColor="@color/colorRed"
                        android:textSize="@dimen/text_18"
                        android:layout_marginEnd="@dimen/workout_frame_96"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/current_training_maxes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:padding="@dimen/workout_frame_padding"
                    android:layout_gravity="center"
                    android:text="@string/current_tm"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_18" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/bench_tm_frame"
                    android:background="@drawable/rectangle_outline"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="6dp"
                    android:layout_marginTop="@dimen/workout_frame_8"
                    android:elevation="16dp">

                    <TextView
                        android:id="@+id/bench_tm_title"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:text="@string/tm_bench_title"
                        android:textColor="@color/colorDarkRed"
                        android:textSize="@dimen/text_18"
                        android:layout_marginStart="@dimen/workout_frame_32"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/bench_tm_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:text="@string/tm_compound_current"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_18"
                        android:layout_marginTop="@dimen/workout_frame_16"
                        android:layout_marginStart="@dimen/workout_frame_8"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/bench_tm_title"/>

                    <TextView
                        android:id="@+id/bench_tm_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:text="@string/tm_compound_update"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_18"
                        android:layout_marginTop="@dimen/workout_frame_16"
                        android:layout_marginStart="@dimen/workout_frame_16"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/bench_tm_current"/>

                    <TextView
                        android:id="@+id/bench_tm_current_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:text="@string/tm_current_placeholder"
                        android:textColor="@color/colorDarkRed"
                        android:textSize="@dimen/text_18"
                        android:layout_marginEnd="@dimen/workout_frame_16"
                        app:layout_constraintTop_toBottomOf="@id/bench_tm_update"
                        app:layout_constraintEnd_toStartOf="@id/bench_arrow" />

                    <ImageView
                        android:id="@+id/bench_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_forward_arrow_orange"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintTop_toBottomOf="@id/bench_tm_update"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="parent"
                        app:layout_constraintStart_toEndOf="parent"
                        tools:ignore="ContentDescription" />

                    <Spinner
                        android:id="@+id/tm_bench_update_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:dropDownWidth="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:autofillHints="no"
                        android:layout_marginStart="@dimen/workout_frame_8"
                        app:layout_constraintTop_toBottomOf="@id/bench_tm_current"
                        app:layout_constraintStart_toEndOf="@id/bench_arrow" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/press_tm_frame"
                    android:background="@drawable/rectangle_outline"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="6dp"
                    android:layout_marginTop="@dimen/workout_frame_8"
                    android:elevation="16dp" >

                    <TextView
                        android:id="@+id/press_tm_title"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:text="@string/tm_press_title"
                        android:textColor="@color/colorDarkRed"
                        android:textSize="@dimen/text_18"
                        android:layout_marginStart="@dimen/workout_frame_32"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/press_tm_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/workout_frame_8"
                        android:layout_marginTop="@dimen/workout_frame_16"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:text="@string/tm_compound_current"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_18"
                        app:layout_constraintStart_toEndOf="@id/press_tm_title"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/press_tm_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:text="@string/tm_compound_update"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_18"
                        android:layout_marginTop="@dimen/workout_frame_16"
                        android:layout_marginStart="@dimen/workout_frame_16"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/press_tm_current" />

                    <TextView
                        android:id="@+id/press_tm_current_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:text="@string/tm_current_placeholder"
                        android:textColor="@color/colorDarkRed"
                        android:textSize="@dimen/text_18"
                        android:layout_marginEnd="@dimen/workout_frame_16"
                        app:layout_constraintTop_toBottomOf="@id/press_tm_update"
                        app:layout_constraintEnd_toStartOf="@id/press_arrow" />

                    <ImageView
                        android:id="@+id/press_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_forward_arrow_orange"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintTop_toBottomOf="@id/press_tm_update"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="parent"
                        app:layout_constraintStart_toEndOf="parent"
                        tools:ignore="ContentDescription" />

                    <Spinner
                        android:id="@+id/tm_press_update_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:dropDownWidth="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:autofillHints="no"
                        android:layout_marginStart="@dimen/workout_frame_8"
                        app:layout_constraintTop_toBottomOf="@id/press_tm_current"
                        app:layout_constraintStart_toEndOf="@id/press_arrow" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/squat_tm_frame"
                    android:background="@drawable/rectangle_outline"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="6dp"
                    android:layout_marginTop="@dimen/workout_frame_8"
                    android:elevation="16dp" >

                    <TextView
                        android:id="@+id/squat_tm_title"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:text="@string/tm_squat_title"
                        android:textColor="@color/colorDarkRed"
                        android:textSize="@dimen/text_18"
                        android:layout_marginStart="@dimen/workout_frame_32"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/squat_tm_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:text="@string/tm_compound_current"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_18"
                        android:layout_marginStart="@dimen/workout_frame_8"
                        android:layout_marginTop="@dimen/workout_frame_16"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/squat_tm_title" />

                    <TextView
                        android:id="@+id/squat_tm_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:text="@string/tm_compound_update"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_18"
                        android:layout_marginStart="@dimen/workout_frame_16"
                        android:layout_marginTop="@dimen/workout_frame_16"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/squat_tm_current"/>

                    <TextView
                        android:id="@+id/squat_tm_current_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:text="@string/tm_current_placeholder"
                        android:textColor="@color/colorDarkRed"
                        android:textSize="@dimen/text_18"
                        android:layout_marginEnd="@dimen/workout_frame_16"
                        app:layout_constraintTop_toBottomOf="@id/squat_tm_update"
                        app:layout_constraintEnd_toStartOf="@id/squat_arrow"/>

                    <ImageView
                        android:id="@+id/squat_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_forward_arrow_orange"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintTop_toBottomOf="@id/squat_tm_update"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="parent"
                        app:layout_constraintStart_toEndOf="parent"
                        tools:ignore="ContentDescription" />

                    <Spinner
                        android:id="@+id/tm_squat_update_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:dropDownWidth="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:autofillHints="no"
                        android:layout_marginStart="@dimen/workout_frame_8"
                        app:layout_constraintTop_toBottomOf="@id/squat_tm_current"
                        app:layout_constraintStart_toEndOf="@id/squat_arrow" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/deadlift_tm_frame"
                    android:background="@drawable/rectangle_outline"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_margin="6dp"
                    android:layout_marginTop="@dimen/workout_frame_8"
                    android:elevation="16dp" >

                    <TextView
                        android:id="@+id/deadlift_tm_title"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:gravity="center"
                        android:text="@string/tm_deadlift_title"
                        android:textColor="@color/colorDarkRed"
                        android:textSize="@dimen/text_18"
                        android:layout_marginStart="@dimen/workout_frame_32"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                    <TextView
                        android:id="@+id/deadlift_tm_current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:text="@string/tm_compound_current"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_18"
                        android:layout_marginStart="@dimen/workout_frame_8"
                        android:layout_marginTop="@dimen/workout_frame_16"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/deadlift_tm_title" />

                    <TextView
                        android:id="@+id/deadlift_tm_update"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:text="@string/tm_compound_update"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_18"
                        android:layout_marginStart="@dimen/workout_frame_16"
                        android:layout_marginTop="@dimen/workout_frame_16"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@id/deadlift_tm_current"/>

                    <TextView
                        android:id="@+id/deadlift_tm_current_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:text="@string/tm_current_placeholder"
                        android:textColor="@color/colorDarkRed"
                        android:textSize="@dimen/text_18"
                        android:layout_marginEnd="@dimen/workout_frame_16"
                        app:layout_constraintTop_toBottomOf="@id/deadlift_tm_update"
                        app:layout_constraintEnd_toStartOf="@id/deadlift_arrow" />

                    <ImageView
                        android:id="@+id/deadlift_arrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ic_forward_arrow_orange"
                        android:layout_marginBottom="10dp"
                        app:layout_constraintTop_toBottomOf="@id/deadlift_tm_update"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="parent"
                        app:layout_constraintStart_toEndOf="parent"
                        tools:ignore="ContentDescription" />

                    <Spinner
                        android:id="@+id/tm_deadlift_update_spinner"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:dropDownWidth="wrap_content"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:autofillHints="no"
                        android:layout_marginStart="@dimen/workout_frame_8"
                        app:layout_constraintTop_toBottomOf="@id/deadlift_tm_current"
                        app:layout_constraintStart_toEndOf="@id/deadlift_arrow" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:background="@color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_marginTop="@dimen/workout_frame_8"
                    android:elevation="8dp" >

                    <Button
                        android:id="@+id/tm_update_all_button"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:text="@string/tm_update_all"
                        android:textColor="@color/colorAccent"
                        android:background="@drawable/update_button"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>