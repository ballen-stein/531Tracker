<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/workout_description"
    android:elevation="0dp" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="3dp"
        android:background="@drawable/fragment_box"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/fragment_settings_description_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/workout_frame_32"
            android:text="@string/settings_bbb_swap"
            android:textSize="@dimen/text_18"
            android:textColor="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/fragment_cancel_frame"
            app:layout_constraintBottom_toBottomOf="@id/fragment_cancel_frame" />

        <FrameLayout
            android:id="@+id/fragment_cancel_frame"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" >

            <ImageView
                android:id="@+id/fragment_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_cancel"
                android:layout_gravity="center" />

        </FrameLayout>

        <ScrollView
            android:id="@+id/fragment_settings_description_scroll"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:elevation="16dp"
            android:background="@drawable/fragmet_inner_box"
            android:layout_weight="1"
            app:layout_constraintTop_toBottomOf="@id/fragment_cancel_frame"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" >

            <FrameLayout
                android:id="@+id/fragment_settings_description_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/workout_frame_padding_half"
                app:layout_constraintTop_toBottomOf="@id/fragment_cancel_frame"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" >

                <TextView
                    android:id="@+id/fragment_settings_description_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/workout_frame_16"
                    android:text="@string/deadlift_placeholder"
                    android:textSize="@dimen/text_14"
                    android:textColor="@color/colorWhite" />

            </FrameLayout>

        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>