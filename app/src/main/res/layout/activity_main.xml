<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="0dp"
    android:background="@color/colorSurface"
    tools:ignore="ContentDescription"
    tools:context=".HomeScreen">

    <FrameLayout
        android:id="@+id/top_frame_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/navigation" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_frame_home"
        app:layout_constraintBottom_toBottomOf="parent">

        <RelativeLayout
            android:layout_marginTop="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- First Row of 4 -->

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="-85dp"
                android:layout_marginStart="-105dp"
                android:background="@drawable/hexagon_shape" />

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="-85dp"
                android:layout_marginStart="62dp"
                android:background="@drawable/hexagon_shape" />

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="-85dp"
                android:layout_marginStart="229dp"
                android:layout_marginEnd="500dp"
                android:background="@drawable/hexagon_shape" />

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="-85dp"
                android:layout_marginStart="396dp"
                android:layout_marginEnd="400dp"
                android:background="@drawable/hexagon_shape" />

            <!-- Second Row of 3 -->

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="-22dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/hexagon_shape" />

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/hexagon_shape" />

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="312dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="-300dp"
                android:background="@drawable/hexagon_shape" />

            <!-- Third Row of 4 -->

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="-105dp"
                android:layout_marginTop="185dp"
                android:background="@drawable/hexagon_shape" />

            <FrameLayout
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="185dp" >

                <ImageView
                    android:id="@+id/update_cycle_hex"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:clickable="false"
                    android:background="@drawable/hexagon_button" />

                <TextView
                    android:id="@+id/update_cycle_text"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:text="@string/cycle_update"
                    android:textSize="@dimen/text_20"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:clickable="true" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="229dp"
                android:layout_marginTop="185dp" >

                <ImageView
                    android:id="@+id/accessories_hex"
                    android:clickable="false"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:backgroundTint="@color/colorBlack"
                    android:background="@drawable/hexagon_button" />

                <TextView
                    android:id="@+id/accessories_text"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:text="@string/add_accessories_button"
                    android:textSize="19sp"
                    android:textColor="@color/colorWhite"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:clickable="true" />

            </FrameLayout>

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="185dp"
                android:layout_marginStart="396dp"
                android:layout_marginEnd="400dp"
                android:background="@drawable/hexagon_shape" />

            <!-- Fourth Row of 3 -->

            <FrameLayout
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="-22dp"
                android:layout_marginTop="320dp" >

                <ImageView
                    android:id="@+id/press_hex"
                    android:clickable="false"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:background="@drawable/hexagon_button" />

                <TextView
                    android:id="@+id/press_text"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:text="@string/button_press"
                    android:textSize="@dimen/text_20"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:clickable="true" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="145dp"
                android:layout_marginTop="320dp" >

                <ImageView
                    android:id="@+id/deadlift_hex"
                    android:clickable="false"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:background="@drawable/hexagon_button" />

                <TextView
                    android:id="@+id/deadlift_text"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:text="@string/button_deadlift"
                    android:textSize="@dimen/text_20"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:clickable="true" />

            </FrameLayout>

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="312dp"
                android:layout_marginTop="320dp"
                android:layout_marginEnd="-300dp"
                android:background="@drawable/hexagon_shape" />

            <!-- Fifth Row of 4 -->

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="-105dp"
                android:layout_marginTop="455dp"
                android:layout_marginBottom="500dp"
                android:background="@drawable/hexagon_shape" />

            <FrameLayout
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="62dp"
                android:layout_marginTop="455dp" >

                <ImageView
                    android:id="@+id/bench_numbers"
                    android:clickable="false"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:background="@drawable/hexagon_button" />

                <TextView
                    android:id="@+id/bench_text"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:text="@string/button_bench"
                    android:textSize="@dimen/text_20"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:clickable="true" />

            </FrameLayout>

            <FrameLayout
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="229dp"
                android:layout_marginTop="455dp">

                <ImageView
                    android:id="@+id/squat_hex"
                    android:clickable="false"
                    android:layout_width="175dp"
                    android:layout_height="175dp"
                    android:background="@drawable/hexagon_button" />

                <TextView
                    android:id="@+id/squat_text"
                    android:layout_width="110dp"
                    android:layout_height="110dp"
                    android:text="@string/button_squat"
                    android:textSize="@dimen/text_20"
                    android:textColor="@color/colorBlue"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:clickable="true" />

            </FrameLayout>

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginTop="455dp"
                android:layout_marginStart="396dp"
                android:layout_marginEnd="400dp"
                android:background="@drawable/hexagon_shape" />

            <!-- Sixth Row of 3 -->


            <ImageView
                android:clickable="false"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="-22dp"
                android:layout_marginBottom="400dp"
                android:layout_marginTop="590dp"
                android:background="@drawable/hexagon_shape" />

            <ImageView
                android:clickable="false"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:background="@drawable/hexagon_shape"
                android:layout_marginTop="590dp"
                android:layout_marginStart="145dp"
                android:layout_marginBottom="400dp" />

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="312dp"
                android:layout_marginTop="590dp"
                android:layout_marginBottom="400dp"
                android:layout_marginEnd="-300dp"
                android:background="@drawable/hexagon_shape" />

            <!-- Seventh Row of 3 -->

            <ImageView
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="-105dp"
                android:layout_marginBottom="500dp"
                android:layout_marginTop="725dp"
                android:background="@drawable/hexagon_shape" />


            <ImageView
                android:clickable="false"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="62dp"
                android:layout_marginBottom="500dp"
                android:layout_marginTop="725dp"
                android:background="@drawable/hexagon_shape" />


            <ImageView
                android:clickable="false"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="229dp"
                android:layout_marginBottom="500dp"
                android:layout_marginTop="725dp"
                android:background="@drawable/hexagon_shape" />


        </RelativeLayout>

        <TextView
            android:id="@+id/cycle_display"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_marginStart="160dp"
            android:gravity="center"
            android:text="@string/cycle_placeholder"
            android:textSize="@dimen/text_20"
            android:textColor="@color/colorBlue" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>