<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".HomeScreen">

    <FrameLayout
        android:id="@+id/top_frame_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBlack"
        app:layout_constraintTop_toTopOf="parent">

        <include layout="@layout/navigation" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/top_frame_home">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="16dp">

            <TextView
                android:id="@+id/cycle_display"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/workout_frame_32"
                android:gravity="center"
                android:text="@string/cycle_placeholder"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_20"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/increase_training_max"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="@dimen/workout_frame_32"
                android:layout_marginTop="@dimen/workout_frame_32"
                android:background="@drawable/grey_black_ripple"
                android:padding="@dimen/workout_frame_padding"
                android:text="@string/cycle_update"
                android:textColor="@drawable/view_lifts_buttons_text"
                android:textSize="@dimen/text_18"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cycle_display" />

            <Button
                android:id="@+id/bbb_test"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginEnd="@dimen/workout_frame_32"
                android:layout_marginTop="@dimen/workout_frame_32"
                android:background="@drawable/grey_black_ripple"
                android:padding="@dimen/workout_frame_padding"
                android:text="BBB Test"
                android:textColor="@drawable/view_lifts_buttons_text"
                android:textSize="@dimen/text_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cycle_display" />

            <Button
                android:id="@+id/addAccessoriesButton"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="28dp"
                android:layout_marginTop="@dimen/workout_frame_32"
                android:background="@drawable/main_buttons"
                android:padding="15dp"
                android:text="@string/add_accessories_button"
                android:textColor="@drawable/main_buttons_text_colors"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/press_numbers"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="@dimen/workout_frame_32"
                android:background="@drawable/grey_black_ripple"
                android:padding="@dimen/workout_frame_padding"
                android:text="@string/button_press"
                android:textColor="@drawable/view_lifts_buttons_text"
                android:textSize="@dimen/text_18"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bbb_test" />

            <Button
                android:id="@+id/deadlift_numbers"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginEnd="@dimen/workout_frame_32"
                android:background="@drawable/grey_black_ripple"
                android:padding="@dimen/workout_frame_padding"
                android:text="@string/button_deadlift"
                android:textColor="@drawable/view_lifts_buttons_text"
                android:textSize="@dimen/text_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bbb_test" />

            <Button
                android:id="@+id/bench_numbers"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginStart="@dimen/workout_frame_32"
                android:background="@drawable/grey_black_ripple"
                android:padding="@dimen/workout_frame_padding"
                android:text="@string/button_bench"
                android:textColor="@drawable/view_lifts_buttons_text"
                android:textSize="@dimen/text_18"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/press_numbers" />

            <Button
                android:id="@+id/squat_numbers"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_marginEnd="@dimen/workout_frame_32"
                android:background="@drawable/grey_black_ripple"
                android:padding="@dimen/workout_frame_padding"
                android:text="@string/button_squat"
                android:textColor="@drawable/view_lifts_buttons_text"
                android:textSize="@dimen/text_18"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/deadlift_numbers" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>