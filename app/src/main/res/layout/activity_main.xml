<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="0dp"
    android:background="@color/colorSurface"
    tools:ignore="ContentDescription"
    tools:context=".HomeScreen">

    <include layout="@layout/navigation"
        android:id="@+id/top_frame_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/colorSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_frame_home"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:elevation="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSurface" >

            <TextView
                android:id="@+id/cycleDisplay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/workout_frame_16"
                android:layout_marginBottom="@dimen/workout_frame_16"
                android:gravity="center"
                android:text="@string/cycle_placeholder"
                android:textSize="@dimen/text_20"
                android:textColor="@color/colorPrimary"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@id/currentLiftStats"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/currentLiftStats"
                android:elevation="0dp"
                android:padding="@dimen/workout_frame_padding"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/colorSurface"
                android:gravity="center"
                android:layout_marginBottom="@dimen/workout_frame_16"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/update_cycle_btn"
                app:layout_constraintStart_toStartOf="parent" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/current_tm"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_16"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/overhand"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/press_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/workout_frame_16"
                        android:text="@string/overhand_placeholder"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_14" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bench"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/bench_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/workout_frame_16"
                        android:text="@string/bench_placeholder"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_14" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/squat"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/squat_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/workout_frame_16"
                        android:text="@string/squat_placeholder"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_14" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/deadlift"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_14" />

                    <TextView
                        android:id="@+id/deadlift_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/workout_frame_16"
                        android:text="@string/deadlift_placeholder"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_14" />

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/update_cycle_btn"
                android:layout_marginBottom="@dimen/workout_frame_16"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:text="@string/cycle_update"
                android:textSize="@dimen/text_20"
                android:textColor="@color/colorPrimary"
                android:clickable="false"
                android:background="@drawable/homepage_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/deadlift_btn"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/press_btn"
                android:layout_marginBottom="@dimen/workout_frame_16"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:text="@string/button_press"
                android:textSize="@dimen/text_20"
                android:textColor="@color/colorPrimary"
                android:clickable="false"
                android:background="@drawable/homepage_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/deadlift_btn"
                app:layout_constraintBottom_toTopOf="@id/bench_btn"/>

            <Button
                android:id="@+id/deadlift_btn"
                android:layout_marginBottom="@dimen/workout_frame_16"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:text="@string/button_deadlift"
                android:textSize="@dimen/text_20"
                android:textColor="@color/colorPrimary"
                android:clickable="false"
                android:background="@drawable/homepage_button"
                app:layout_constraintStart_toEndOf="@id/press_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@id/squat_btn"/>

            <Button
                android:id="@+id/bench_btn"
                android:layout_marginBottom="@dimen/workout_frame_16"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:text="@string/button_bench"
                android:textSize="@dimen/text_20"
                android:textColor="@color/colorPrimary"
                android:clickable="false"
                android:background="@drawable/homepage_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/squat_btn"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <Button
                android:id="@+id/squat_btn"
                android:layout_marginBottom="@dimen/workout_frame_16"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_size"
                android:text="@string/button_squat"
                android:textSize="@dimen/text_20"
                android:textColor="@color/colorPrimary"
                android:clickable="false"
                android:background="@drawable/homepage_button"
                app:layout_constraintStart_toEndOf="@id/bench_btn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>