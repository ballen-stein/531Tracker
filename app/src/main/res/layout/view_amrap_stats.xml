<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSurface"
    android:elevation="0dp"
    tools:context=".ViewAmrapStats">

    <include layout="@layout/navigation_stats"
        android:id="@+id/navigation_vertical"
        android:layout_height="match_parent"
        android:layout_width="wrap_content"
        android:orientation="vertical"
        android:elevation="16dp"
        app:layout_constraintEnd_toEndOf="parent" />

    <ScrollView
        android:id="@+id/all_charts"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:elevation="8dp"
        android:background="@drawable/rectangle_outline"
        app:layout_constraintEnd_toStartOf="@+id/navigation_vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="@dimen/workout_frame_8">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/workout_frame_padding_half">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/bench"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_14"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="@dimen/workout_frame_8"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/overhand"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_14"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart2"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="@dimen/workout_frame_8"
                app:layout_constraintTop_toBottomOf="@id/chart"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/squat"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_14"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart3"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="@dimen/workout_frame_8"
                app:layout_constraintTop_toBottomOf="@id/chart2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/deadlift"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_14"/>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart4"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_margin="@dimen/workout_frame_8"
                app:layout_constraintTop_toBottomOf="@id/chart2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>