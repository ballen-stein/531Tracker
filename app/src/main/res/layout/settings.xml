<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".Settings">

    <include layout="@layout/hexagon_background" />

    <include layout="@layout/navigation"
        android:id="@+id/top_navigation"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/top_navigation"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/workout_frame_16"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/top_navigation">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/table_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/transparent" >

                <TableLayout
                    android:id="@+id/lifts_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@color/transparent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_column="0"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorWhite"
                            android:gravity="center"
                            android:padding="@dimen/workout_frame_padding_half"
                            android:background="@drawable/table_boxes"
                            android:text="@string/table_lift" />

                        <TextView
                            android:layout_column="1"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorWhite"
                            android:gravity="center"
                            android:padding="@dimen/workout_frame_padding_half"
                            android:background="@drawable/table_boxes"
                            android:text="@string/table_completed" />

                        <TextView
                            android:layout_column="2"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorWhite"
                            android:gravity="center"
                            android:padding="@dimen/workout_frame_padding_half"
                            android:background="@drawable/table_boxes"
                            android:text="@string/table_missing" />
                    </TableRow>

                </TableLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/reset_settings_frame"
                android:layout_marginTop="@dimen/workout_frame_16"
                android:orientation="horizontal"
                android:background="@drawable/box"
                android:gravity="center"
                android:padding="@dimen/workout_frame_padding"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/settings_reset_all"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_16" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/workout_frame_8"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_redo"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lift_settings_frame"
                android:layout_marginTop="@dimen/workout_frame_16"
                android:orientation="horizontal"
                android:background="@drawable/box"
                android:gravity="center"
                android:padding="@dimen/workout_frame_padding"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/settings_view_lift_options"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_16" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/workout_frame_8"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_weight"
                    android:contentDescription="Weight by mikicon from the Noun Project"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/amrap_settings_frame"
                android:layout_marginTop="@dimen/workout_frame_16"
                android:orientation="horizontal"
                android:background="@drawable/box"
                android:gravity="center"
                android:padding="@dimen/workout_frame_padding"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/settings_amrap_stats"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_16" />

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/workout_frame_8"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_info"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/delete_settings_frame"
                android:layout_marginTop="@dimen/workout_frame_16"
                android:orientation="horizontal"
                android:background="@drawable/box"
                android:gravity="center"
                android:padding="@dimen/workout_frame_padding"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/settings_delete_data"
                    android:textColor="@color/colorWhite"
                    android:textSize="@dimen/text_16" />

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="@dimen/workout_frame_8"
                    android:layout_gravity="center"
                    android:background="@drawable/icon_cancel"
                    tools:ignore="ContentDescription" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>