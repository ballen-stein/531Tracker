<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkGrey"
    tools:context=".Settings">

    <include layout="@layout/hexagon_background" />

    <include layout="@layout/navigation"
        android:id="@+id/top_navigation"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/top_navigation"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/top_navigation">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/table_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/transparent" >

                <TableLayout
                    android:layout_marginTop="@dimen/workout_frame_padding"
                    android:id="@+id/lifts_table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/workout_frame_padding_half"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:background="@color/transparent">

                    <TableRow
                        android:layout_width="match_parent"
                        android:gravity="center">

                        <TextView
                            android:layout_column="0"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorWhite"
                            android:gravity="center"
                            android:padding="@dimen/workout_frame_padding_half"
                            android:background="@drawable/table_boxes"
                            android:text="@string/table_lift" />

                        <TextView
                            android:layout_column="1"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorWhite"
                            android:gravity="center"
                            android:padding="@dimen/workout_frame_padding_half"
                            android:background="@drawable/table_boxes"
                            android:text="@string/table_completed" />

                        <TextView
                            android:layout_column="2"
                            android:layout_width="105dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textColor="@color/colorWhite"
                            android:gravity="center"
                            android:padding="@dimen/workout_frame_padding_half"
                            android:background="@drawable/table_boxes"
                            android:text="@string/table_missing" />
                    </TableRow>

                </TableLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/reset_settings_frame"
                    android:orientation="vertical"
                    android:background="@drawable/button_black_border"
                    android:gravity="center"
                    android:padding="@dimen/workout_frame_padding"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    app:layout_constraintTop_toBottomOf="@id/lift_settings_frame"
                    app:layout_constraintStart_toEndOf="@id/delete_settings_frame"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/settings_reset_all"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_16" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_redo"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/currentLiftStats"
                    android:orientation="vertical"
                    android:background="@drawable/button_black_border"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="@dimen/workout_frame_padding"
                    app:layout_constraintEnd_toStartOf="@id/lift_settings_frame"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/current_tm"
                        android:gravity="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_16"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="left"
                            android:text="@string/bench"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_14" />

                        <TextView
                            android:id="@+id/bench_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right"
                            android:layout_marginStart="@dimen/workout_frame_16"
                            android:text="@string/bench_placeholder"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/overhand"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_14" />

                        <TextView
                            android:id="@+id/press_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/workout_frame_16"
                            android:text="@string/overhand_placeholder"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/deadlift"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_14" />

                        <TextView
                            android:id="@+id/deadlift_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/workout_frame_16"
                            android:text="@string/deadlift_placeholder"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/squat"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_14" />

                        <TextView
                            android:id="@+id/squat_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/workout_frame_16"
                            android:text="@string/squat_placeholder"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/text_14" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lift_settings_frame"
                    android:orientation="vertical"
                    android:background="@drawable/button_black_border"
                    android:gravity="center"
                    android:padding="@dimen/workout_frame_padding"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="@dimen/workout_frame_padding"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/workout_frame_padding"
                        android:text="@string/settings_view_lift_options"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_16" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_weight"
                        android:contentDescription="Weight by mikicon from the Noun Project"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/amrap_settings_frame"
                    android:orientation="horizontal"
                    android:background="@drawable/button_black_border"
                    android:gravity="center"
                    android:padding="@dimen/workout_frame_padding"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="100dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/delete_settings_frame" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/settings_amrap_stats"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_16" />

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="35dp"
                        android:layout_marginStart="@dimen/workout_frame_8"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_info"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/delete_settings_frame"
                    android:orientation="vertical"
                    android:background="@drawable/button_black_border"
                    android:gravity="center"
                    android:padding="@dimen/workout_frame_padding"
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    app:layout_constraintEnd_toStartOf="@id/reset_settings_frame"
                    app:layout_constraintTop_toBottomOf="@id/lift_settings_frame"
                    app:layout_constraintStart_toStartOf="parent" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/workout_frame_padding_half"
                        android:text="@string/settings_delete_data"
                        android:textColor="@color/colorWhite"
                        android:textSize="@dimen/text_16" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:background="@drawable/icon_cancel"
                        tools:ignore="ContentDescription" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>