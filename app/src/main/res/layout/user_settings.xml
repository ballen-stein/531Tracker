<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserSettings">

    <include layout="@layout/hexagon_background" />

    <include layout="@layout/navigation"
        android:id="@+id/top_navigation"/>


    <LinearLayout
        android:layout_marginTop="@dimen/workout_frame_16"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/top_navigation">

        <LinearLayout
            android:id="@+id/reset_settings_frame"
            android:orientation="horizontal"
            android:background="@drawable/box"
            android:padding="@dimen/workout_frame_padding"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/settings_reset_all"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_16" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_redo"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/delete_settings_frame"
            android:layout_marginTop="@dimen/workout_frame_16"
            android:orientation="horizontal"
            android:background="@drawable/box"
            android:padding="@dimen/workout_frame_padding"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/settings_delete_data"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_16" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_cancel"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bbb_settings_frame"
            android:layout_marginTop="@dimen/workout_frame_16"
            android:orientation="horizontal"
            android:background="@drawable/box"
            android:padding="@dimen/workout_frame_padding"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/settings_view_bbb_options"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_16" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_info"
                tools:ignore="ContentDescription" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/amrap_settings_frame"
            android:layout_marginTop="@dimen/workout_frame_16"
            android:orientation="horizontal"
            android:background="@drawable/box"
            android:padding="@dimen/workout_frame_padding"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/settings_amrap_stats"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text_16" />

            <ImageView
                android:layout_width="28dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:background="@drawable/icon_info"
                tools:ignore="ContentDescription" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>