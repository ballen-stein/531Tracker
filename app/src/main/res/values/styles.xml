<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorOrange</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:background">@color/colorWhite</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <!-- Change Button Text Color -->
        <item name="colorAccent">@color/colorPrimary</item>
        <!-- Change Title and Message Color -->
        <item name="android:textColorPrimary">@color/colorOrange</item>
        <!-- Change Background Color -->
        <item name="android:windowBackground">@color/colorWhite</item>
        <!-- Change Text Size -->
        <item name="android:labelTextSize">@dimen/text_8</item>
    </style>



</resources>
